Import('env')

import os.path

module_build_targets = []
env.Append(LIBPATH=['$build_dir'] + env['LIBPATH'])
for f in env.Glob("*.cc"):
    source = os.path.basename(str(f))
    target = source[:-3]
    module_build_targets += env.Program(
        target=target,
        source=[source],
        LIBS  =["XrdCl",
                "replica_core",
                "qserv_common",
                "util",
                "protobuf",
                "boost_filesystem",
                "boost_system",
                "log",
                "log4cxx"])

Return('module_build_targets')
